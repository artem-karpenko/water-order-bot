{
  "name": "water-order-bot",
  "version": "2.0.0",
  "description": "Water Order Bot - Azure Functions Serverless",
  "main": "dist/functions.js",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "func start",
    "deploy": "npm run build && func azure functionapp publish water-order-bot-func --no-build",
    "deploy:prod": "npm run build && rm -rf node_modules && npm install --omit=dev && func azure functionapp publish water-order-bot-func --no-build && npm install",
    "publish-settings": "func azure functionapp publish water-order-bot-func --publish-local-settings",
    "clean": "rm -rf dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^24.10.0",
    "azure-functions-core-tools": "^4.0.5611",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@azure/data-tables": "^13.3.2",
    "@azure/functions": "^4.0.0",
    "@googleapis/gmail": "^15.0.0",
    "google-auth-library": "^10.5.0",
    "telegraf": "^4.16.3"
  }
}
