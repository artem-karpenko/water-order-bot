# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Whitelisted user IDs (comma-separated)
# Example: WHITELISTED_USER_IDS=123456789,987654321
WHITELISTED_USER_IDS=

# Gmail API Configuration (for email reading and sending)
GMAIL_CLIENT_ID=your_gmail_client_id_here
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token_here
EMAIL_SENDER_FILTER=sender@example.com

# Email order configuration
EMAIL_ORDER_SUBJECT=Water Delivery Order
EMAIL_ORDER_BODY=Please deliver water.

# Reply monitoring configuration
# How often to check for email replies (in minutes, default: 2)
REPLY_CHECK_INTERVAL_MINUTES=2

# Azure Container Registry (for deployment)
AZURE_REGISTRY_PASSWORD=your_acr_password_here

# Azure Table Storage (for order persistence)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your_storage_account;AccountKey=your_storage_key;EndpointSuffix=core.windows.net

# Server Configuration (optional, defaults to 3000)
PORT=3000
